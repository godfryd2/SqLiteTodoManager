<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:background="@mipmap/background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <TextView
            android:text="Menadżer zadań"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:id="@+id/header"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:textAlignment="center" />

    </LinearLayout>

    <Button
        android:text="SYNCHRONIZUJ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/refresh" />

    <ListView
        android:id="@+id/lvTodos"
        android:layout_width="fill_parent"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_weight="1"></ListView>

    <LinearLayout
        android:id="@+id/llControlButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAddNew"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_add"></Button>

        <Button
            android:id="@+id/btnClearCompleted"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_clear"></Button>
    </LinearLayout>
</LinearLayout>